@model WebQuanLySpare.Models.danhsachlinhkien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

<div class="col-lg-12" style="margin-top:20px">
    <div class="panel panel-red">
        <div class="panel-heading" style="text-align:center">
            <i class="fa fa-trash"></i><b> XOÁ :</b> @Html.DisplayFor(model => model.tenlinhkien)
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <td>Tên model:</td>
                            <td>@Html.DisplayFor(model => model.model)</td>
                        </tr>
                        <tr>
                            <td>Tên linh kiện:</td>
                            <td>@Html.DisplayFor(model => model.tenlinhkien)</td>
                        </tr>
                        <tr>
                            <td>Mã linh kiện:</td>
                            <td>@Html.DisplayFor(model => model.malinhkien)</td>
                        </tr>
                        <tr>
                            <td>Tên Maker:</td>
                            <td>@Html.DisplayFor(model => model.maker)</td>
                        </tr>
                        <tr>
                            <td>Đơn vị tính:</td>
                            <td>@Html.DisplayFor(model => model.donvi)</td>
                        </tr>
                        <tr>
                            <td>Đơn giá:</td>
                            <td>@Html.DisplayFor(model => model.dongia)</td>
                        </tr>
                        <tr>
                            <td>Số lượng tồn kho:</td>
                            <td>@Html.DisplayFor(model => model.tonkho)</td>
                        </tr>
                        <tr>
                            <td>Ghi chú:</td>
                            <td>@Html.DisplayFor(model => model.ghichu)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <input type="submit" value="Xác nhận" class="btn btn-success btn-block" />

            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <a href='@Url.Action("index", "danhsachlinhkiens")' class="btn btn-outline btn-default"><i class="fa fa-chevron-left"></i> Quay lại</a>
</div>
}



