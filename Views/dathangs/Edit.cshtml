@model WebQuanLySpare.Models.dathang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

<div class="col-lg-12" style="margin-top:20px">
    <div class="panel panel-green">
        <div class="panel-heading" style="text-align:center">
            <strong> <i class="fa fa-check-circle"></i> XÁC NHẬN HÀNG ĐÃ VỀ</strong>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table  table-bordered table-hover ">
                    <tbody>
                        <tr>
                            <td class="col-xs-2" style="text-align:center"><b>Tên linh kiện</b></td>
                            <td>
                                @Html.EditorFor(model => model.tenlinhkien, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>

                        <tr>
                            <td class="col-xs-2" style="text-align:center"><b>Mã linh kiện</b></td>
                            <td>
                                @Html.EditorFor(model => model.malinhkien, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>

                        <tr>
                            <td class="col-xs-2" style="text-align:center"><b>Maker</b></td>
                            <td>
                                @Html.EditorFor(model => model.maker, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>

                        <tr>
                            <td class="col-xs-2" style="text-align:center"><b>Đơn giá</b></td>
                            <td>
                                @Html.EditorFor(model => model.dongia, new { htmlAttributes = new { @class = "form-control" } })

                            </td>
                        </tr>
                        <tr>
                            <td class="col-xs-2" style="text-align:center"><b>Đơn vị tính</b></td>
                            <td>
                                @Html.EditorFor(model => model.donvi, new { htmlAttributes = new { @class = "form-control" } })

                            </td>
                        </tr>

                        <tr>
                            <td class="col-xs-2" style="text-align:center"><b>Số lượng đặt hàng</b></td>
                            <td>
                                @Html.EditorFor(model => model.soluong, new { htmlAttributes = new { @class = "form-control" } })

                            </td>
                        </tr>
                        <tr>
                            <td class="col-xs-2" style="text-align:center"><b>Ghi chú</b></td>
                            <td>
                                @Html.EditorFor(model => model.ghichu, new { htmlAttributes = new { @class = "form-control" } })

                            </td>
                        </tr>
                        <tr>
                            <td class="col-xs-2" style="text-align:center"><b>Tổng tiền</b></td>
                            <td>
                                @Html.EditorFor(model => model.thanhtien, new { htmlAttributes = new { @class = "form-control" } })

                            </td>
                        </tr>
                        <tr>
                            <td class="col-xs-2" style="text-align:center"><b>Ngày đặt hàng</b></td>
                            <td>
                                @Html.EditorFor(model => model.ngaydathang, new { htmlAttributes = new { @class = "form-control" } })

                            </td>
                        </tr>
                        <tr>
                            <td class="col-xs-2" style="text-align:center"><b>Ngày hàng về</b></td>
                            <td>
                                @Html.EditorFor(model => model.ngayhangve, new { htmlAttributes = new { @class = "form-control", @Value = DateTime.Now.ToString("dd/MM/yyyy") } })

                            </td>
                        </tr>
                        <tr>
                            <td class="col-xs-2" style="text-align:center"><b>Trạng thái</b></td>
                            <td>
                                @Html.EditorFor(model => model.trangthai, new { htmlAttributes = new { @class = "form-control", @Value = "Hàng đã về" } })

                            </td>
                        </tr>

                    </tbody>
                </table>
                <input type="submit" value="Xác nhận" class="btn btn-btn btn-success btn-block" />

            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <a href='@Url.Action("index", "dathangs")' class="btn btn-outline btn-default"><i class="fa fa-chevron-left"></i> Quay lại</a>
</div>

}